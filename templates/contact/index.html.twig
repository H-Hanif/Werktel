{% extends 'base.html.twig' %}

{% block title %}Contact â€“ Werk Tel{% endblock %}

{% block body %}

    <section class="section">
        <div class="container" style="max-width: 840px;">
            <h1 class="section-title">Contact</h1>
            <p class="section-subtitle">
                Stel je vraag over Werk Telefoon of laat je gegevens achter, dan nemen we zo snel mogelijk contact met je op.
            </p>

            {# Meldingen #}
            {% for msg in app.flashes('success') %}
                <div class="alert alert-success">{{ msg }}</div>
            {% endfor %}

            {% if errors is defined and errors %}
                <div class="alert alert-danger">
                    <strong>Controleer de volgende punten:</strong>
                    <ul class="mb-0">
                        {% for e in errors %}
                            <li>{{ e }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <div class="wt-card p-4">
                <form action="{{ path('app_contact') }}" method="post" novalidate>
                    {# Honeypot veld (onzichtbaar) #}
                    <div style="display:none;">
                        <label>Laat dit veld leeg</label>
                        <input type="text" name="_honey" value="">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Naam *</label>
                        <input type="text" name="Naam" class="form-control"
                               value="{{ formData.naam ?? '' }}" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Bedrijf</label>
                        <input type="text" name="Bedrijf" class="form-control"
                               value="{{ formData.bedrijf ?? '' }}">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">E-mailadres *</label>
                        <input type="email" name="email" class="form-control"
                               value="{{ formData.email ?? '' }}" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Telefoonnummer</label>
                        <input type="text" name="Telefoonnummer" class="form-control"
                               value="{{ formData.telefoon ?? '' }}">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Bericht *</label>
                        <textarea name="Bericht" rows="5" class="form-control" required>{{ formData.bericht ?? '' }}</textarea>
                    </div>

                    <button type="submit" class="btn btn-wt-primary">
                        Verstuur bericht
                    </button>
                </form>
            </div>
        </div>
    </section>

{% endblock %}
