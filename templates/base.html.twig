            max-width: 260px;
            height: auto;
            border-radius: 22px;
            margin: 0 auto;
            box-shadow: 0 18px 40px rgba(0,0,0,0.12);
            transition: transform .3s ease, box-shadow .3s ease;
        }

        .feature-slide-img:hover {
            transform: scale(1.05);
            box-shadow: 0 22px 50px rgba(0,0,0,0.16);
        }

        /* --- ARROWS STYLING --- */
        .feature-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: #ffffff;
            border: none;
