{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Werk Tel{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap CSS #}
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
    >

    <style>
        /* -----------------------------
           GLOBAL / ROOT
        ------------------------------*/
        :root {
            --wt-green: #28c700;
            --wt-green-dark: #1f9f00;
            --wt-green-soft: #ecffe8;
            --text-dark: #212529;
            --text-light: #4b5563;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: "Segoe UI", Roboto, system-ui, -apple-system, sans-serif;
            background-color: #f5f5f5;
            color: var(--text-dark);
            margin: 0;
            padding: 0;
        }

        /* -----------------------------
           NAVBAR
        ------------------------------*/
        .navbar-werktel {
            background: var(--wt-green);
            padding: 12px 0;
        }

        .navbar-werktel .navbar-brand {
            font-size: 1.35rem;
            font-weight: 700;
            color: #fff !important;
        }

        .wt-logo {
            height: 32px;
            filter: drop-shadow(0 0 4px rgba(255,255,255,0.5));
            margin-right: 6px;
        }

        .navbar-werktel .nav-link {
            font-size: 1rem;
            font-weight: 500;
            padding: 8px 12px !important;
            border-radius: 8px;
            color: #fff !important;
            transition: background-color .25s ease, color .25s ease, transform .15s ease;
        }

        .navbar-werktel .nav-link:hover,
        .navbar-werktel .nav-link:focus {
            background: rgba(255,255,255,.18);
            color: #fff !important;
            transform: translateY(-1px);
        }

        .navbar-toggler {
            background-color: rgba(255,255,255,0.3);
            border-radius: 8px;
            border: none;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        /* -----------------------------
           HERO SECTION
        ------------------------------*/
        .hero-section {
            padding: 110px 0 120px;
            background: radial-gradient(circle at top, #37ff7b 0, #19c700 35%, #049000 70%, #003312 100%);
            color: #ffffff;
            text-align: center;
        }

        .hero-inner {
            max-width: 880px;
            margin: 0 auto;
            padding: 42px 32px 54px;
            border-radius: 32px;
            background: linear-gradient(
                    135deg,
                    rgba(255,255,255,0.18),
                    rgba(255,255,255,0.05)
            );
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.18);
        }

        .hero-logo-wrapper {
            position: relative;
            width: 140px;
            height: 140px;
            margin: 0 auto 18px auto;
            border-radius: 32px;
            background: radial-gradient(circle at top, #46ff8a 0, #20c700 50%, #049000 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 18px 45px rgba(0,0,0,0.45);
        }

        .hero-logo-polished {
            width: 80px;
            height: auto;
            filter: drop-shadow(0 0 14px rgba(255,255,255,0.7));
            transition: transform .25s ease-in-out;
        }

        .hero-logo-polished:hover {
            transform: scale(1.06);
        }

        .hero-orb {
            position: absolute;
            border-radius: 999px;
            opacity: 0.75;
            filter: blur(1px);
            animation: floatOrb 18s ease-in-out infinite alternate;
        }

        .hero-orb.orb-1 {
            width: 70px;
            height: 70px;
            background: radial-gradient(circle at 30% 30%, #ffffff 0, #8bffb7 40%, transparent 80%);
            top: -18px;
            left: -18px;
        }

        .hero-orb.orb-2 {
            width: 90px;
            height: 90px;
            background: radial-gradient(circle at 20% 30%, #ffffff 0, #c8ff6a 35%, transparent 85%);
            bottom: -22px;
            right: -18px;
        }

        .hero-orb.orb-3 {
            width: 60px;
            height: 60px;
            background: radial-gradient(circle at 20% 30%, #ffffff 0, #7df0ff 30%, transparent 80%);
            top: 10px;
            right: 50%;
            transform: translateX(50%);
        }

        @keyframes floatOrb {
            0% { transform: translate3d(0, 0, 0); }
            100% { transform: translate3d(10px, -14px, 0); }
        }

        .hero-title {
            font-size: 2.6rem;
            font-weight: 800;
            letter-spacing: .02em;
        }

        .hero-subtitle {
            font-size: 1.1rem;
            opacity: .95;
        }

        .hero-body {
            font-size: 0.98rem;
            max-width: 640px;
            margin-left: auto;
            margin-right: auto;
            opacity: 0.92;
        }

        .hero-tagline {
            font-size: 0.95rem;
            opacity: 0.9;
        }

        .hero-button-group {
            display: flex;
            gap: 18px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 6px;
        }

        .hero-btn-primary {
            background: #ffffff;
            color: var(--wt-green-dark);
            padding: 16px 34px;
            font-size: 1.05rem;
            font-weight: 700;
            border-radius: 999px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.18);
            transition: .25s ease;
        }

        .hero-btn-primary:hover {
            background: #f3fff5;
            transform: translateY(-3px);
            box-shadow: 0 16px 40px rgba(0,0,0,0.28);
        }

        .hero-btn-outline {
            padding: 16px 34px;
            font-size: 1.05rem;
            font-weight: 700;
            border-radius: 999px;
            border: 2px solid #ffffff;
            color: #ffffff;
            background: transparent;
            transition: .25s ease;
        }

        .hero-btn-outline:hover {
            background: rgba(255,255,255,0.12);
            transform: translateY(-3px);
        }

        @media (max-width: 576px) {
            .hero-title { font-size: 2.1rem; }
            .hero-inner { padding: 32px 22px 42px; }
            .hero-btn-primary,
            .hero-btn-outline {
                width: 100%;
                font-size: 1rem;
                padding: 14px 20px;
            }
        }

        /* -----------------------------
           GENERIC SECTIONS
        ------------------------------*/
        .section {
            padding: 70px 0;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--wt-green-dark);
            text-align: center;
            margin-bottom: .5rem;
        }

        .section-subtitle {
            text-align: center;
            color: #6c757d;
            margin-bottom: 2rem;
        }

        .section-subtitle--compact {
            margin-top: -6px;
            margin-bottom: 28px;
        }

        /* -----------------------------
           FEATURE SECTIONS (ONS BEDRIJF / DIENSTEN)
        ------------------------------*/
        .feature-section {
            padding: 80px 0;
            background: #f5f7fb;
        }

        .feature-section--alt {
            background: #ffffff;
        }

        .section-header {
            max-width: 720px;
            margin: 0 auto 32px auto;
        }

        .section-header .section-subtitle {
            margin-bottom: 0;
        }

        .feature-row {
            position: relative;
            max-width: 980px;
            margin: 0 auto 28px auto;
            padding: 24px 26px;
            border-radius: 24px;
            background: #ffffff;
            box-shadow: 0 16px 40px rgba(15,23,42,0.08);
            display: flex;
            flex-direction: column;
            gap: 20px;
            overflow: hidden;
            transition: transform .25s ease, box-shadow .25s ease;
        }

        .feature-row::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--wt-green), #16a34a);
            opacity: 0.9;
        }

        .feature-row:hover {
            transform: translateY(-4px);
            box-shadow: 0 22px 55px rgba(15,23,42,0.12);
        }

        .feature-row--reverse {
            flex-direction: column-reverse;
        }

        @media (min-width: 768px) {
            .feature-row {
                padding: 26px 34px;
                flex-direction: row;
                align-items: center;
            }

            .feature-row--reverse {
                flex-direction: row-reverse;
            }
        }

        .feature-text {
            flex: 1;
            min-width: 0;
        }

        .feature-eyebrow {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: .08em;
            font-weight: 600;
            color: var(--wt-green-dark);
            margin-bottom: 4px;
        }

        .feature-title {
            font-size: 1.55rem;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .feature-description {
            font-size: 0.96rem;
            color: var(--text-light);
            margin-bottom: 10px;
        }

        .feature-text ul {
            margin-bottom: 8px;
            padding-left: 18px;
            color: var(--text-light);
            font-size: 0.95rem;
        }

        .feature-text a {
            color: var(--wt-green-dark);
            font-weight: 600;
            text-decoration: none;
        }

        .feature-text a:hover {
            text-decoration: underline;
        }

        .feature-media {
            flex: 0 0 auto;
            text-align: center;
        }

        .feature-media img {
            max-width: 240px;
            width: 100%;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
            transition: transform .3s ease, box-shadow .3s ease;
        }

        .feature-media img:hover {
            transform: scale(1.04);
            box-shadow: 0 20px 45px rgba(0,0,0,0.18);
        }

        @media (max-width: 575.98px) {
            .feature-row {
                padding: 20px 18px;
            }

            .feature-media img {
                max-width: 200px;
            }
        }





        /* ------------------------------------------
   DOWNLOAD BUTTON (Modern Glass + Glow)
------------------------------------------*/
        .btn-download {
            display: inline-block;
            background: linear-gradient(135deg, #28c700, #20a800);
            color: #ffffff;
            padding: 16px 42px;
            font-size: 1.25rem;
            font-weight: 700;
            border-radius: 16px;
            text-decoration: none;
            box-shadow: 0 8px 25px rgba(0, 180, 60, 0.25);
            border: 1px solid rgba(255,255,255,0.25);
            backdrop-filter: blur(6px);
            transition: all .25s ease, transform .2s ease;
        }

        /* Hover effect */
        .btn-download:hover {
            background: linear-gradient(135deg, #32db00, #22b900);
            transform: translateY(-4px);
            box-shadow: 0 12px 35px rgba(0, 180, 60, 0.35);
        }

        /* Active click animation */
        .btn-download:active {
            transform: scale(0.97);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
        }

        /* Mobile full width */
        @media(max-width: 576px){
            .btn-download {
                width: 100%;
                font-size: 1.15rem;
                padding: 18px 0;
                border-radius: 20px;
            }
        }
        /* ===========================
           DOWNLOAD SECTION
           (App Store + Google Play)
        =========================== */

        #download {
            padding: 80px 0;
            background: #f5f7fb; /* licht grijs/blauw blok */
        }

        #download .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--wt-green-dark);
            margin-bottom: .5rem;
        }

        #download .section-subtitle {
            max-width: 620px;
            margin: 0 auto 2.2rem auto;
            color: #6b7280;
            font-size: .98rem;
        }

        /* GRID ‚Äì 2 naast elkaar op desktop, onder elkaar op mobiel */
        #download .row {
            max-width: 900px;
            margin: 0 auto;
        }

        @media (max-width: 767.98px) {
            #download .col-md-6 {
                margin-bottom: 14px;
            }
        }

        /* KAARTEN */
        .download-card {
            position: relative;
            background: #ffffff;
            border-radius: 24px;
            padding: 32px 26px;
            box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
            transition: transform .25s ease, box-shadow .25s ease, border-color .25s ease;
            border: 1px solid rgba(148, 163, 184, 0.25);
        }

        .download-card::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: inherit;
            background: radial-gradient(circle at top, rgba(40, 199, 0, 0.18), transparent 55%);
            opacity: 0;
            transition: opacity .25s ease;
            z-index: -1;
        }

        .download-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 24px 55px rgba(15, 23, 42, 0.14);
            border-color: rgba(74, 222, 128, 0.6);
        }

        .download-card:hover::before {
            opacity: 1;
        }

        /* ICON BOVENIN */
        .platform-icon {
            font-size: 52px;
            margin-bottom: 14px;
            color: #111827;
        }

        .platform-icon.android {
            color: #3DDC84; /* offici√´le Android-groen tint */
        }

        /* TITEL + TEKST */
        .platform-title {
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: .4rem;
            color: #111827;
        }

        .platform-text {
            font-size: .96rem;
            color: var(--text-light);
            max-width: 320px;
            margin: 0 auto 18px auto;
        }

        /* STORE BADGE */
        .store-link {
            display: inline-block;
        }

        .store-badge {
            width: 190px;
            max-width: 100%;
            height: auto;
            border-radius: 14px;
            box-shadow: 0 10px 25px rgba(15, 23, 42, 0.25);
            transition: transform .22s ease, box-shadow .22s ease, filter .22s ease;
        }

        .store-badge:hover {
            transform: translateY(-3px);
            box-shadow: 0 16px 32px rgba(15, 23, 42, 0.35);
            filter: saturate(1.05);
        }

        /* KLEINE DISCLAIMER TEKST ONDERAAN */
        #download .text-muted {
            font-size: .86rem;
            margin-top: 22px !important;
            color: #9ca3af !important;
        }

        /* -----------------------------
           FUNCTIE-SLIDER / CAROUSEL
        ------------------------------*/
        .feature-carousel-card {
            border-radius: 26px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.08);
        }

        .feature-slide-img {
            width: 100%;
            max-width: 260px;
            height: auto;
            border-radius: 22px;
            margin: 0 auto;
            box-shadow: 0 18px 40px rgba(0,0,0,0.12);
            transition: transform .3s ease, box-shadow .3s ease;
        }

        .feature-slide-img:hover {
            transform: scale(1.05);
            box-shadow: 0 22px 50px rgba(0,0,0,0.16);
        }

        /* ‚úÖ Pijlen naast de afbeeldingen */
        .feature-slide-wrapper {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .feature-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 36px;
            height: 36px;
            border-radius: 50%;
            border: none;
            background: #ffffff;
            box-shadow: 0 6px 18px rgba(0,0,0,0.15);
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 22px;
            font-weight: 700;
            cursor: pointer;
            transition: all .2s ease-in-out;
            z-index: 5;
        }

        .feature-arrow:hover {
            background: #eaffea;
            color: var(--wt-green-dark);
            transform: translateY(-50%) scale(1.12);
            box-shadow: 0 10px 24px rgba(0,0,0,0.22);
        }

        .feature-arrow-left {
            left: 30px;
        }

        .feature-arrow-right {
            right: 30px;
        }

        @media (max-width: 768px) {
            .feature-arrow {
                width: 30px;
                height: 30px;
                font-size: 18px;
            }
            .feature-arrow-left {
                left: -12px;
            }
            .feature-arrow-right {
                right: -12px;
            }
        }

        /* -----------------------------
           FOOTER
        ------------------------------*/
        .wt-footer {
            background: var(--wt-green-dark);
            color: #fff;
            text-align: center;
            padding: 55px 0 30px;
        }

        .footer-logo {
            height: 50px;
            margin-bottom: 10px;
        }

        .footer-links {
            display: flex;
            gap: 26px;
            justify-content: center;
            margin-top: 18px;
            flex-wrap: wrap;
        }

        .footer-links a {
            font-weight: 500;
            color: #dbffdd;
            text-decoration: none;
            transition: color .25s ease, text-decoration .25s ease;
        }

        .footer-links a:hover {
            color: #ffffff;
            text-decoration: underline;
        }
    </style>







    {% block stylesheets %}{% endblock %}
</head>
