{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Werk Tel{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap CSS #}
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
    >

    <style>
        /* -----------------------------
           GLOBAL / ROOT
        ------------------------------*/
        :root {
            --wt-green: #28c700;
            --wt-green-dark: #1f9f00;
            --wt-green-soft: #ecffe8;
            --text-dark: #212529;
            --text-light: #4b5563;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: "Segoe UI", Roboto, system-ui, -apple-system, sans-serif;
            background-color: #f5f5f5;
            color: var(--text-dark);
            margin: 0;
            padding: 0;
        }

        /* -----------------------------
           NAVBAR
        ------------------------------*/
        .navbar-werktel {
            background: var(--wt-green);
            padding: 12px 0;
        }

        .navbar-werktel .navbar-brand {
            font-size: 1.35rem;
            font-weight: 700;
            color: #fff !important;
        }

        .wt-logo {
            height: 32px;
            filter: drop-shadow(0 0 4px rgba(255,255,255,0.5));
            margin-right: 6px;
        }

        .navbar-werktel .nav-link {
            font-size: 1rem;
            font-weight: 500;
            padding: 8px 12px !important;
            border-radius: 8px;
            color: #fff !important;
            transition: background-color .25s ease, color .25s ease, transform .15s ease;
        }

        .navbar-werktel .nav-link:hover,
        .navbar-werktel .nav-link:focus {
            background: rgba(255,255,255,.18);
            color: #fff !important;
            transform: translateY(-1px);
        }

        .navbar-toggler {
            background-color: rgba(255,255,255,0.3);
            border-radius: 8px;
            border: none;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        /* -----------------------------
           HERO SECTION
        ------------------------------*/
        .hero-section {
            padding: 90px 0 80px;
            background: radial-gradient(circle at top, #37ff7b 0, #19c700 30%, #049000 65%, #003312 100%);
            color: #fff;
            text-align: center;
        }

        .hero-title {
            font-size: clamp(2.3rem, 4vw, 3rem);
            font-weight: 700;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            opacity: .95;
        }

        .hero-logo-wrapper {
            width: 260px;
            height: 260px;
            margin: 0 auto 1.75rem auto;
            background: var(--wt-green);
            border-radius: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            box-shadow: 0 20px 80px rgba(0, 0, 0, 0.4);
        }

        .hero-logo-img {
            width: 68%;
            height: auto;
            filter: drop-shadow(0 0 18px rgba(255,255,255,0.7));
        }

        /* -----------------------------
           GENERIC SECTIONS
        ------------------------------*/
        .section {
            padding: 70px 0;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--wt-green-dark);
            text-align: center;
            margin-bottom: .5rem;
        }

        .section-subtitle {
            text-align: center;
            color: #6c757d;
            margin-bottom: 2rem;
        }

        /* -----------------------------
           PRODUCT TILES / ‚ÄúONS BEDRIJF‚Äù
        ------------------------------*/
        .product-grid {
            display: flex;
            flex-direction: column;
            gap: 32px;
        }

        .product-tile {
            background: #fff;
            border-radius: 28px;
            padding: 40px;
            box-shadow: 0 20px 45px rgba(0,0,0,0.08);
            display: flex;
            flex-direction: column;
            gap: 20px;
            transition: transform .25s ease, box-shadow .25s ease;
        }

        .product-tile:hover {
            transform: translateY(-6px);
            box-shadow: 0 26px 60px rgba(0,0,0,0.12);
        }

        .product-tile--split {
            flex-direction: column;
        }

        @media (min-width: 768px) {
            .product-tile--split {
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
            }
        }

        .product-tile-title {
            font-size: 1.6rem;
            font-weight: 700;
            margin-bottom: .5rem;
        }

        .product-tile-text {
            color: var(--text-light);
            font-size: .98rem;
        }

        .product-tile-image {
            text-align: center;
        }

        .product-tile-image img {
            max-width: 360px;
            width: 100%;
            border-radius: 24px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
            transition: transform .3s ease, box-shadow .3s ease;
        }

        .product-tile-image img:hover {
            transform: scale(1.05);
            box-shadow: 0 20px 45px rgba(0,0,0,0.18);
        }

        /* -----------------------------
           DOWNLOAD CARDS (App page)
        ------------------------------*/
        .download-card {
            background: #fff;
            border-radius: 22px;
            box-shadow: 0 18px 45px rgba(0,0,0,0.08);
            transition: transform .3s ease, box-shadow .3s ease;
        }

        .download-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 25px 60px rgba(0,0,0,0.12);
        }

        .platform-icon {
            font-size: 54px;
            margin-bottom: 14px;
            color: var(--wt-green-dark);
        }

        .platform-icon.android {
            color: #3DDC84;
        }

        .platform-title {
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: .4rem;
        }

        .platform-text {
            font-size: .96rem;
            color: var(--text-light);
        }

        .store-badge {
            width: 170px;
            height: auto;
            transition: transform .3s ease;
        }

        .store-badge:hover {
            transform: scale(1.07);
        }

        /* -----------------------------
           FUNCTIE-SLIDER / CAROUSEL
        ------------------------------*/
        .feature-carousel-card {
            border-radius: 26px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.08);
        }

        .feature-title {
            font-size: 1.6rem;
            font-weight: 700;
            margin-bottom: .6rem;
        }

        .feature-description {
            font-size: .98rem;
            color: var(--text-light);
            margin-bottom: .6rem;
        }

        .feature-slide-img {
            width: 100%;
            max-width: 260px;
            height: auto;
            border-radius: 22px;
            margin: 0 auto;
            box-shadow: 0 18px 40px rgba(0,0,0,0.12);
            transition: transform .3s ease, box-shadow .3s ease;
        }

        .feature-slide-img:hover {
            transform: scale(1.05);
            box-shadow: 0 22px 50px rgba(0,0,0,0.16);
        }

        /* Custom pijlen naast de afbeelding
           (gebruik in HTML bijv. <button class="carousel-arrow left">‚Äπ</button>) */
        .carousel-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 34px;
            height: 34px;
            border-radius: 999px;
            border: none;
            background: #fff;
            box-shadow: 0 6px 16px rgba(0,0,0,0.15);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            font-weight: 600;
            color: #4b4b4b;
            cursor: pointer;
            transition: transform .2s ease, box-shadow .2s ease, color .2s ease;
            z-index: 10;
        }

        .carousel-arrow:hover {
            color: var(--wt-green-dark);
            transform: translateY(-50%) scale(1.08);
            box-shadow: 0 8px 20px rgba(0,0,0,0.22);
        }

        .carousel-arrow.left {
            left: -20px;
        }

        .carousel-arrow.right {
            right: -20px;
        }

        @media (max-width: 768px) {
            .feature-slide-img {
                max-width: 190px;
            }

            .carousel-arrow {
                width: 30px;
                height: 30px;
                font-size: 18px;
            }

            .carousel-arrow.left {
                left: -12px;
            }

            .carousel-arrow.right {
                right: -12px;
            }
        }

        /* -----------------------------
           FOOTER
        ------------------------------*/
        .wt-footer {
            background: var(--wt-green-dark);
            color: #fff;
            text-align: center;
            padding: 55px 0 30px;
        }

        .footer-logo {
            height: 50px;
            margin-bottom: 10px;
        }

        .footer-links {
            display: flex;
            gap: 26px;
            justify-content: center;
            margin-top: 18px;
            flex-wrap: wrap;
        }

        .footer-links a {
            font-weight: 500;
            color: #dbffdd;
            text-decoration: none;
            transition: color .25s ease, text-decoration .25s ease;
        }

        .footer-links a:hover {
            color: #ffffff;
            text-decoration: underline;
        }
    </style>





    {% block stylesheets %}{% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-werktel shadow-sm fixed-top">
    <div class="container">

        {# Logo #}
        <a class="navbar-brand d-flex align-items-center gap-2"
           href="{{ app.request.get('_route') == 'app_home' ? '#home' : path('app_home') }}">
            <img src="{{ asset('img/werktell.webp') }}" alt="Werk Tel logo" class="wt-logo">
            <span>Werk Tel</span>
        </a>

        {# Hamburger for mobile #}
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        {# Menu #}
        <div class="collapse navbar-collapse justify-content-end" id="navMenu">
            <ul class="navbar-nav gap-lg-4 text-center">

                <li class="nav-item">
                    <a class="nav-link"
                       href="{{ app.request.get('_route') == 'app_home' ? '#home' : path('app_home') ~ '#home' }}">
                        Home
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_contact') }}">
                        Contact
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link"
                       href="{{ app.request.get('_route') == 'app_home' ? '#ons-bedrijf' : path('app_home') ~ '#ons-bedrijf' }}">
                        Ons bedrijf
                    </a>
                </li>

                {# üî• Scroll link naar sectie op homepage #}
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') == 'app_function' ? 'active' : '' }}"
                       href="{{ path('app_function') }}">
                        Werk Tel App (Functies)
                    </a>
                </li>


                {# üÜï Link naar downloadpagina #}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_app') }}">
                        Download App
                    </a>
                </li>

            </ul>
        </div>

    </div>
</nav>



{% block body %}{% endblock %}
