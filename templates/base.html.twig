{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Werk Tel{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap CSS #}
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
    >

    <style>
        :root {
            --wt-green: #28c700;      /* hoofdkleur â€“ felgroen zoals oude site */
            --wt-green-dark: #1f9f00; /* donkere variant */
            --wt-green-soft: #ecffe8; /* zachte achtergrond */
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: "Segoe UI", Roboto, system-ui, -apple-system, sans-serif;
            background-color: #f5f5f5;
            color: #212529;
            margin: 0;
            padding: 0;
        }


        /* NAVBAR */
        .navbar-werktel {
            background: var(--wt-green);
            padding: 12px 0;
        }

        .navbar-werktel .navbar-brand {
            font-size: 1.35rem;
            font-weight: 700;
            color: #ffffff !important;
        }

        .navbar-werktel .navbar-brand .wt-logo {
            height: 32px;
            width: auto;
            filter: drop-shadow(0 0 4px rgba(255,255,255,0.5));
            margin-right: 6px;
        }

        .navbar-werktel .nav-link {
            font-size: 1rem;
            font-weight: 500;
            padding: 8px 12px !important;
            border-radius: 8px;
            color: #ffffff !important;
            transition: 0.25s;
        }

        .navbar-werktel .nav-link:hover,
        .navbar-werktel .nav-link:focus {
            background: rgba(255,255,255,0.18);
        }

        .navbar-werktel .navbar-nav {
            align-items: center;
            gap: 4px;
        }

        /* Hamburger menu style */
        .navbar-toggler {
            background-color: rgba(255,255,255,0.3);
            border-radius: 8px;
            border: none;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        /* HERO */
        .hero-section {
            padding: 90px 0 80px;
            background: radial-gradient(circle at top, #37ff7b 0, #19c700 30%, #049000 65%, #003312 100%);
            color: #ffffff;
            text-align: center;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            opacity: 0.95;
        }

        .hero-logo-wrapper {
            width: 260px;
            height: 260px;
            margin: 0 auto;
            background: var(--wt-green);
            border-radius: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            box-shadow: 0px 20px 80px rgba(0, 0, 0, 0.4);
        }

        .hero-logo-img {
            width: 68%;
            height: auto;
            filter: drop-shadow(0 0 18px rgba(255,255,255,0.7));
        }

        /* SECTIONS */
        .section {
            padding: 70px 0;
        }

        .section-title {
            font-weight: 700;
            font-size: 2rem;
            color: var(--wt-green-dark);
            margin-bottom: .5rem;
            text-align: center;
        }

        .section-subtitle {
            color: #6c757d;
            margin-bottom: 2rem;
            text-align: center;
        }

        /* PRODUCT TILES (Apple style) */
        .product-grid {
            display: flex;
            flex-direction: column;
            gap: 32px;
        }

        .product-tile {
            background: #ffffff;
            border-radius: 28px;
            padding: 40px;
            display: flex;
            flex-direction: column;
            box-shadow: 0 20px 45px rgba(0,0,0,0.08);
        }

        @media (min-width: 768px) {
            .product-tile--split {
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
            }
        }

        .product-tile-title {
            font-weight: 700;
            font-size: 1.6rem;
            margin-bottom: 12px;
        }

        .product-tile-text {
            font-size: 0.98rem;
            color: #4b5563;
        }

        .product-tile-image {
            margin-top: 20px;
            text-align: center;
        }

        /* FIX IMAGE SIZE */
        .product-tile-image img {
            max-width: 360px;
            width: 100%;
            border-radius: 24px;
            object-fit: cover;
            margin: 0 auto;
            box-shadow: 0 15px 35px rgba(0,0,0,0.12);
            transition: transform .3s ease;
        }

        .product-tile-image img:hover {
            transform: scale(1.05);
        }

        /* FOOTER */
        .wt-footer {
            background: var(--wt-green-dark);
            color: white;
            padding: 55px 0 30px;
            text-align: center;
            margin-top: 70px;
        }

        .footer-logo {
            height: 50px;
            margin-bottom: 10px;
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 26px;
            margin-top: 18px;
            flex-wrap: wrap;
        }

        .footer-links a {
            font-weight: 500;
            text-decoration: none;
            color: #dbffdd;
            transition: .25s ease;
        }

        .footer-links a:hover {
            color: white;
            text-decoration: underline;
        }

    </style>




    {% block stylesheets %}{% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-werktel shadow-sm fixed-top">
    <div class="container">

        {# Logo #}
        <a class="navbar-brand d-flex align-items-center gap-2" href="#home">
            <img src="{{ asset('img/werktell.webp') }}" alt="Werk Tel logo" class="wt-logo">
            <span>Werk Tel</span>
        </a>

        {# Hamburger button for mobile #}
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        {# Collapsable menu #}
        <div class="collapse navbar-collapse justify-content-end" id="navMenu">
            <ul class="navbar-nav gap-lg-4 text-center">

                <li class="nav-item">
                    <a class="nav-link"
                       href="{{ app.request.get('_route') == 'app_home' ? '#home' : path('app_home') ~ '#home' }}">
                        Home
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_contact') }}">
                        Contact
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link"
                       href="{{ app.request.get('_route') == 'app_home' ? '#ons-bedrijf' : path('app_home') ~ '#ons-bedrijf' }}">
                        Ons bedrijf
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link"
                       href="{{ app.request.get('_route') == 'app_home' ? '#werktel-app' : path('app_home') ~ '#werktel-app' }}">
                        Werk Tel App
                    </a>
                </li>

            </ul>
        </div>


    </div>
</nav>


