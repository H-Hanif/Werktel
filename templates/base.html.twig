{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Werk Tel{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap CSS #}
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
    >

    <style>
        /* -----------------------------
           GLOBAL / ROOT
        ------------------------------*/
        :root {
            --wt-green: #28c700;
            --wt-green-dark: #1f9f00;
            --wt-green-soft: #ecffe8;
            --text-dark: #212529;
            --text-light: #4b5563;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: "Segoe UI", Roboto, system-ui, -apple-system, sans-serif;
            background-color: #f5f5f5;
            color: var(--text-dark);
            margin: 0;
            padding: 0;
        }

        /* -----------------------------
           NAVBAR
        ------------------------------*/
        .navbar-werktel {
            background: var(--wt-green);
            padding: 12px 0;
        }

        .navbar-werktel .navbar-brand {
            font-size: 1.35rem;
            font-weight: 700;
            color: #fff !important;
        }

        .wt-logo {
            height: 32px;
            filter: drop-shadow(0 0 4px rgba(255,255,255,0.5));
            margin-right: 6px;
        }

        .navbar-werktel .nav-link {
            font-size: 1rem;
            font-weight: 500;
            padding: 8px 12px !important;
            border-radius: 8px;
            color: #fff !important;
            transition: background-color .25s ease, color .25s ease, transform .15s ease;
        }

        .navbar-werktel .nav-link:hover,
        .navbar-werktel .nav-link:focus {
            background: rgba(255,255,255,.18);
            color: #fff !important;
            transform: translateY(-1px);
        }

        .navbar-toggler {
            background-color: rgba(255,255,255,0.3);
            border-radius: 8px;
            border: none;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        .download-phone{
            max-width: 600px;   /* pas aan wat jij mooi vindt */
            height: 600px;
            height: auto;
            display: block;
        }

        /* ------------------------------------
           HERO SECTION â€“ tekst links, 3D logo rechts
        --------------------------------------*/
        .hero-section {
            padding: 110px 0 140px;
            background: #dcebd6;

        }

        /* Tekst links */
        .hero-eyebrow {
            font-size: 0.95rem;
            font-weight: 700;
            color: #11a63a;
            text-transform: uppercase;
            letter-spacing: .08em;
            margin-bottom: 10px;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 800;
            line-height: 1.15;
            color: #002b10;
            margin-bottom: 18px;
        }

        .hero-subtitle {
            font-size: 1.1rem;
            color: #355b42;
            max-width: 540px;
            margin-bottom: 18px;
        }

        .hero-list {
            list-style: none;
            padding-left: 0;
            margin-bottom: 30px;
        }

        .hero-list li {
            font-size: 1rem;
            margin-bottom: 6px;
            color: #2b4f39;
        }

        /* Buttons */
        .hero-buttons {
            display: flex;
            gap: 14px;
            flex-wrap: wrap;
        }

        .hero-btn-main {
            background: #12c448;
            color: white;
            padding: 14px 28px;
            border-radius: 40px;
            font-weight: 700;
            transition: .2s;
            border: none;
            box-shadow: 0 12px 28px rgba(5, 120, 35, 0.35);
        }

        .hero-btn-main:hover {
            background: #0ea63a;
            transform: translateY(-2px);
            box-shadow: 0 18px 40px rgba(5, 120, 35, 0.45);
        }

        .hero-btn-outline {
            border: 2px solid #12c448;
            color: #12c448;
            padding: 14px 28px;
            border-radius: 40px;
            font-weight: 700;
            transition: .2s;
            background: #ffffff;
        }

        .hero-btn-outline:hover {
            background: #eaffef;
            transform: translateY(-2px);
        }

        /* ------------------------------------
           VISUAL RECHTS â€“ grote cirkel + 3D kaart
        --------------------------------------*/
        .hero-visual-wrapper {
            position: relative;
        }

        /* Grote ronde achtergrond (de â€œmuurâ€) */
        .hero-bg-circle {
            width: 400px;
            height: 400px;
            border-radius: 50%;
            background: radial-gradient(circle at 20% 0,
            #ffffff 0,
            #5fff97 35%,
            #12c448 75%,
            #0b7a2b 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 40px 80px rgba(0, 0, 0, 0.28); /* sterke schaduw */
            position: relative;
            z-index: 1;
        }

        /* Vierkante kaart die uit de cirkel / muur komt */
        .hero-logo-card {
            width: 230px;
            height: 230px;
            border-radius: 32px;
            background: linear-gradient(145deg, #18d84a, #09a531);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow:
                    0 28px 50px rgba(0, 0, 0, 0.55),   /* diepe drop shadow */
                    0 0 0 1px rgba(255,255,255,0.25); /* subtiele rand */
            transform: translateY(12px);          /* kaart iets naar voren */
        }

        /* Logo-icon op de kaart */
        .hero-logo-icon {
            width: 68%;
            height: auto;
            filter: drop-shadow(0 10px 18px rgba(0, 0, 0, 0.35));
        }

        /* ------------------------------------
           EXTRA BLOBS / GLOWS ACHTER DE CIRKEL
        --------------------------------------*/
        .hero-visual-wrapper::before {
            content: "";
            position: absolute;
            width: 460px;
            height: 460px;
            border-radius: 50%;
            right: -80px;
            top: -40px;
            background: radial-gradient(circle at 30% 20%,
            #b8ffd3 0,
            #5cf58e 30%,
            #12c448 65%,
            transparent 100%);
            opacity: 0.55;
            filter: blur(2px);
            z-index: 0;
        }

        .hero-visual-wrapper::after {
            content: "";
            position: absolute;
            width: 260px;
            height: 260px;
            border-radius: 55% 45% 60% 40%;
            right: 40px;
            bottom: -40px;
            background: radial-gradient(circle at 10% 0,
            #ffffff 0,
            #8bffc0 35%,
            #1aa84a 80%);
            opacity: 0.45;
            filter: blur(1px);
            z-index: 0;
        }

        /* ------------------------------------
           RESPONSIVE
        --------------------------------------*/
        @media (max-width: 991px) {
            .hero-section {
                text-align: center;
                padding: 80px 0 90px;
            }

            .hero-title {
                font-size: 2.2rem;
            }

            .hero-buttons {
                justify-content: center;
            }

            .hero-bg-circle {
                margin-top: 40px;
                width: 320px;
                height: 320px;
            }

            .hero-logo-card {
                width: 200px;
                height: 200px;
            }

            .hero-visual-wrapper::before,
            .hero-visual-wrapper::after {
                opacity: 0.25;
                right: -40px;
            }
        }

        @media (max-width: 576px) {
            .hero-section {
                padding: 80px 0 70px;
            }

            .hero-title {
                font-size: 1.9rem;
            }

            .hero-bg-circle {
                width: 250px;
                height: 250px;
            }

            .hero-logo-card {
                width: 170px;
                height: 170px;
                transform: translateY(8px);
            }

            /* Op klein scherm: blobs weghalen, alleen de cirkel + kaart tonen */
            .hero-visual-wrapper::before,
            .hero-visual-wrapper::after {
                display: none;
            }

            .hero-buttons {
                flex-direction: column;
                align-items: stretch;
            }

            .hero-btn-main,
            .hero-btn-outline {
                width: 100%;
                text-align: center;
                font-size: 1rem;
                padding: 13px 18px;
            }
        }


        /* -----------------------------
   GENERIC SECTIONS TITLES
------------------------------*/
        .section-title {
            font-size: 2.4rem;
            font-weight: 800;
            color: #062814;
            text-align: left;
            margin-bottom: .5rem;
        }

        .section-subtitle {
            color: #546474;
            max-width: 640px;
            margin: 0 auto 2rem auto;
            text-align: center;
        }

        .section-subtitle--compact {
            margin-top: -4px;
            margin-bottom: 24px;
        }

        /* -----------------------------
           FEATURE SECTIONS
           (Over ons / Onze diensten)
           Rinkel-achtige layout
        ------------------------------*/

        /* Hele band */
        .feature-section {
            padding: 90px 0;
            background: #dcebd6;

        }

        .feature-section--alt {
            background: #fffdf8; /* lichte variant voor tweede blok */
        }

        .section-header {
            max-width: 900px;
            margin: 0 auto 40px auto;
        }

        /* Rij: image links â€“ tekst rechts */
        .feature-row {
            max-width: 1120px;
            margin: 0 auto 60px auto;
            display: flex;
            flex-direction: column;
            gap: 32px;
            align-items: center;
        }

        /* Tweede rij omdraaien */
        .feature-row--reverse {
            flex-direction: column;
        }

        /* Desktop: twee kolommen naast elkaar */
        @media (min-width: 992px) {
            .feature-row {
                flex-direction: row;
                justify-content: space-between;
                gap: 64px;
            }

            .feature-row--reverse {
                flex-direction: row-reverse;
            }
        }

        /* Tekstkolom */
        .feature-text {
            flex: 1 1 50%;
            min-width: 0;
        }

        .feature-eyebrow {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: .08em;
            font-weight: 600;
            color: #0b7a2b;
            margin-bottom: 8px;
        }

        .feature-title {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 12px;
            color: #062814;
        }

        .feature-description {
            font-size: 1rem;
            color: #435366;
            margin-bottom: 12px;
        }

        .feature-text ul {
            margin-bottom: 14px;
            padding-left: 20px;
            color: #435366;
            font-size: 0.98rem;
        }

        .feature-text li {
            margin-bottom: 4px;
        }

        .feature-text a {
            color: #0b7a2b;
            font-weight: 600;
            text-decoration: none;
        }

        .feature-text a:hover {
            text-decoration: underline;
        }

        /* Afbeeldingskolom â€“ grote ronde vorm + device */
        .feature-media {
            flex: 0 0 40%;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            min-width: 0;
        }



        /* Telefoon / app screenshot zelf */
        .feature-media img {
            position: relative;
            z-index: 1;
            max-width: 260px;
            width: 100%;
            border-radius: 36px;
            box-shadow:
                    0 26px 60px rgba(15, 23, 42, 0.45),
                    0 0 0 1px rgba(255,255,255,0.6);
            background: #ffffff;
            transition: transform .25s ease, box-shadow .25s ease;
        }

        /* Kleine hover-bounce zoals Rinkel */
        .feature-media img:hover {
            transform: translateY(-4px);
            box-shadow:
                    0 34px 70px rgba(15, 23, 42, 0.55),
                    0 0 0 1px rgba(255,255,255,0.8);
        }

        /* Mobile tweaks */
        @media (max-width: 991.98px) {
            .feature-section {
                padding: 70px 0;
            }

            .feature-row {
                margin-bottom: 40px;
            }

            .section-title {
                text-align: center;
            }

            .feature-media::before {
                width: 420px;
                height: 420px;
                left: 50%;
                transform: translate(-50%, -50%);
                opacity: 0.7;
            }

            .feature-media img {
                max-width: 220px;
            }

            .feature-text {
                text-align: center;
            }

            .feature-text ul {
                text-align: left;
                display: inline-block;
            }
        }

        @media (max-width: 575.98px) {
            .feature-media::before {
                width: 340px;
                height: 340px;
            }

            .feature-media img {
                max-width: 200px;
            }
        }

        /* -----------------------------
           FUNCTIE-SLIDER / CAROUSEL
        ------------------------------*/
        .feature-carousel-card {
            border-radius: 26px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.08);
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative; /* nodig voor absolute arrows */
            padding: 24px 32px;
        }

        .feature-slide-img {
            width: 100%;
            max-width: 260px;
            height: auto;
            border-radius: 22px;
            margin: 0 auto;
            box-shadow: 0 18px 40px rgba(0,0,0,0.12);
            transition: transform .3s ease, box-shadow .3s ease;
        }

        /* Alleen op grotere schermen de afbeelding een tikje naar rechts */
        @media (min-width: 992px) {
            .feature-slide-img {
                margin-left: 60px;
            }
        }

        .feature-slide-img:hover {
            transform: scale(1.05);
            box-shadow: 0 22px 50px rgba(0,0,0,0.16);
        }

        /* --- ARROWS STYLING --- */
        .feature-arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: #ffffff;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            color: #4b4b4b;
            cursor: pointer;
            box-shadow: 0 6px 16px rgba(0,0,0,0.12);
            transition: .25s ease;
            z-index: 10;
        }

        /* Hover effect */
        .feature-arrow:hover {
            background: #ffffff;
            color: var(--wt-green-dark);
            transform: translateY(-50%) scale(1.1);
            box-shadow: 0 8px 22px rgba(0,0,0,0.18);
        }

        /* --- POSITIONERING DESKTOP (naast de foto) --- */
        .feature-arrow-left {
            left: 12px;
        }

        .feature-arrow-right {
            right: 12px;
        }

        /* -----------------------------
      FUNCTIE-SLIDER / CAROUSEL
   ------------------------------*/

        .features-header-section {
            padding-top: 7rem;     /* ruimte onder de navbar */
            padding-bottom: 3rem;
        }

        .features-header-section .section-title {
            font-size: 2.4rem;
            font-weight: 700;
            color: #111827; /* donkere mooie tekstkleur */
        }

        .features-header-section .section-subtitle {
            font-size: 1.1rem;
            color: #6b7280; /* zachte grijstint */
            max-width: 650px;
            margin: 0 auto;
        }

        .feature-carousel-card {
            border-radius: 26px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.08);
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative; /* nodig voor absolute arrows */
            padding: 24px 32px;
        }

        .feature-slide-img {
